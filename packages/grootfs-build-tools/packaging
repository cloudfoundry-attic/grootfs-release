# abort script on any command that exits with a non zero value
set -e

export PREFIX=${BOSH_INSTALL_TARGET}
export PATH=${PREFIX}/bin:$PATH

# autoconf
tar xzf grootfs-build-tools/autoconf-2.69.tar.gz
(
  set -e
  cd autoconf-2.69
  autoconf_dir=$PREFIX/share/autoconf ./configure --prefix=$PREFIX
  make
  make install prefix=$PREFIX
)

# gettext
tar xzf grootfs-build-tools/gettext-0.19.8.1.tar.gz
(
  set -e
  cd gettext-0.19.8.1
  autoconf_dir=$PREFIX/share/autoconf ./configure --prefix=$PREFIX
  make
  make install prefix=$PREFIX
)

# automake
tar xzf grootfs-build-tools/automake-1.15.tar.gz
(
  set -e
  cd automake-1.15
  ./configure --prefix=$PREFIX
  make
  make install prefix=$PREFIX
)

# libtool
tar xzf grootfs-build-tools/libtool-2.4.6.tar.gz
(
  set -e
  cd libtool-2.4.6
  ./configure --prefix=$PREFIX
  make
  make install prefix=$PREFIX
)

# pkg-config
tar xzf grootfs-build-tools/pkg-config-0.29.tar.gz
(
  set -e
  cd pkg-config-0.29
  ./configure --prefix=$PREFIX --with-internal-glib
  make
  make install prefix=$PREFIX
)
