#!/bin/bash

BIN_PATH=/var/vcap/jobs/grootfs-debug/bin
DATA_PATH=/var/vcap/data/grootfs-debug
TRACE_DAT=${DATA_PATH}/trace.dat
RUN_PATH=/var/vcap/sys/run/grootfs-debug
PID_FILE=${RUN_PATH}/grootfs-debug.pid
export PATH=/var/vcap/packages/trace-cmd/bin:$PATH

mkdir -p $DATA_PATH
mkdir -p $RUN_PATH

GROOTFS_DEBUG=<%= !p("grootfs-debug.disabled") %>

case $1 in

  start)
    if [[ "$GROOTFS_DEBUG" == "false" ]]
    then
      ${BIN_PATH}/no-action
    else
      ${BIN_PATH}/run
    fi

    ;;

  stop)
    if [[ -f "$PID_FILE" ]]
    then
      kill -9 $(cat $PID_FILE)
      trace-cmd stop
      rm $PID_FILE
    fi

    ;;

  *)
    echo "Usage: $0 {start|stop}"

    ;;

esac

